<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions to select each frequency -->
    <record id="action_select_2hz" model="ir.actions.server">
        <field name="name">Select 2Hz</field>
        <field name="model_id" ref="model_vibration_dashboard"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'vibration.dashboard',
    'res_id': records.id,
    'view_mode': 'form',
    'target': 'current',
}
records.write({'selected_frequency': '2hz'})
        </field>
    </record>

    <record id="action_select_3hz" model="ir.actions.server">
        <field name="name">Select 3Hz</field>
        <field name="model_id" ref="model_vibration_dashboard"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'vibration.dashboard',
    'res_id': records.id,
    'view_mode': 'form',
    'target': 'current',
}
records.write({'selected_frequency': '3hz'})
        </field>
    </record>

    <record id="action_select_5hz" model="ir.actions.server">
        <field name="name">Select 5Hz</field>
        <field name="model_id" ref="model_vibration_dashboard"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'vibration.dashboard',
    'res_id': records.id,
    'view_mode': 'form',
    'target': 'current',
}
records.write({'selected_frequency': '5hz'})
        </field>
    </record>

    <record id="action_select_7hz" model="ir.actions.server">
        <field name="name">Select 7Hz</field>
        <field name="model_id" ref="model_vibration_dashboard"/>
        <field name="state">code</field>
        <field name="code">
action = {
    'type': 'ir.actions.act_window',
    'res_model': 'vibration.dashboard',
    'res_id': records.id,
    'view_mode': 'form',
    'target': 'current',
}
records.write({'selected_frequency': '7hz'})
        </field>
    </record>

    <!-- Tree view for cycle data in dashboard -->
    <record id="view_vibration_cycle_data_tree_dashboard" model="ir.ui.view">
        <field name="name">vibration.cycle.data.tree.dashboard</field>
        <field name="model">vibration.cycle.data</field>
        <field name="arch" type="xml">
            <list string="Cycle Data" create="false" edit="false" delete="false">
                <field name="cycle_number"/>
                <field name="timestamp"/>
                <field name="degree_0_planned"/>
                <field name="degree_0_actual"/>
                <field name="degree_45_planned"/>
                <field name="degree_45_actual"/>
                <field name="degree_90_planned"/>
                <field name="degree_90_actual"/>
                <field name="degree_135_planned"/>
                <field name="degree_135_actual"/>
                <field name="degree_180_planned"/>
                <field name="degree_180_actual"/>
                <field name="degree_225_planned"/>
                <field name="degree_225_actual"/>
                <field name="degree_270_planned"/>
                <field name="degree_270_actual"/>
                <field name="degree_315_planned"/>
                <field name="degree_315_actual"/>
                <field name="degree_360_planned"/>
                <field name="degree_360_actual"/>
            </list>
        </field>
    </record>

    <!-- Dashboard Form View -->
    <record id="view_vibration_dashboard_form" model="ir.ui.view">
        <field name="name">vibration.dashboard.form</field>
        <field name="model">vibration.dashboard</field>
        <field name="arch" type="xml">
            <form string="Vibration Testing Machine Dashboard" create="false" delete="false">
                <header>
                    <button name="action_refresh_dashboard"
                            string="Refresh Dashboard"
                            type="object"
                            class="btn-primary"
                            icon="fa-refresh"/>
                </header>
                <sheet>
                    <div class="row">
                        <!-- 2Hz Card -->
                        <div class="col-lg-3 col-6">
                            <div class="card border-primary" style="cursor: pointer;">
                                <div class="card-body text-center">
                                    <p class="mb-0"><strong>2Hz</strong></p>
                                    <small class="text-muted">±R Amplitude</small>
                                    <div class="mt-2">
                                        <button name="%(action_select_2hz)d"
                                                string="View Details"
                                                type="action"
                                                class="btn btn-sm btn-primary"
                                                context="{'default_selected_frequency': '2hz'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 3Hz Card -->
                        <div class="col-lg-3 col-6">
                            <div class="card border-success" style="cursor: pointer;">
                                <div class="card-body text-center">
                                    <p class="mb-0"><strong>3Hz</strong></p>
                                    <small class="text-muted">±R/2 Amplitude</small>
                                    <div class="mt-2">
                                        <button name="%(action_select_3hz)d"
                                                string="View Details"
                                                type="action"
                                                class="btn btn-sm btn-success"
                                                context="{'default_selected_frequency': '3hz'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 5Hz Card -->
                        <div class="col-lg-3 col-6">
                            <div class="card border-info" style="cursor: pointer;">
                                <div class="card-body text-center">
                                    <p class="mb-0"><strong>5Hz</strong></p>
                                    <small class="text-muted">±R/4 Amplitude</small>
                                    <div class="mt-2">
                                        <button name="%(action_select_5hz)d"
                                                string="View Details"
                                                type="action"
                                                class="btn btn-sm btn-info"
                                                context="{'default_selected_frequency': '5hz'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- 7Hz Card -->
                        <div class="col-lg-3 col-6">
                            <div class="card border-warning" style="cursor: pointer;">
                                <div class="card-body text-center">
                                    <p class="mb-0"><strong>7Hz</strong></p>
                                    <small class="text-muted">±R/6 Amplitude</small>
                                    <div class="mt-2">
                                        <button name="%(action_select_7hz)d"
                                                string="View Details"
                                                type="action"
                                                class="btn btn-sm btn-warning"
                                                context="{'default_selected_frequency': '7hz'}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <field name="selected_frequency" invisible="1"/>

                    <div class="row mt-4" invisible="not selected_frequency">
                        <div class="col-12">
                            <div class="alert alert-info d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>Selected Frequency: </strong>
                                    <field name="selected_frequency" readonly="1" class="fw-bold"/>
                                </div>
                                <button name="action_clear_selection"
                                        string="Clear Selection"
                                        type="object"
                                        class="btn btn-sm btn-secondary"
                                        icon="fa-times"/>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3" invisible="not selected_frequency">
                        <div>
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0">
                                        <i class="fa fa-line-chart"/> Live Chart - Dimension vs Time
                                    </h5>
<!--                                    <div class="btn-group" role="group">-->
<!--                                        <button class="btn btn-sm btn-light" onclick="this.closest('.card-body').querySelector('canvas').toBlob(b => {const a = document.createElement('a'); a.href = URL.createObjectURL(b); a.download = 'chart.png'; a.click();});" title="Export Chart as Image">-->
<!--                                            <i class="fa fa-picture-o"/> Chart-->
<!--                                        </button>-->
<!--                                        <button class="btn btn-sm btn-light" title="Export Data as CSV">-->
<!--                                            <i class="fa fa-download"/> Data-->
<!--                                        </button>-->
<!--                                    </div>-->
                                </div>
                                <div class="card-body">
                                    <field name="frequency_value" invisible="1"/>
                                    <field name="chart_data" widget="vibration_live_chart" nolabel="1"/>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="card h-100">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">
                                        <i class="fa fa-table"/> Data Logs
                                    </h5>
                                </div>
                                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                                    <field name="cycle_data_ids"
                                           widget="one2many_list"
                                           mode="list"
                                           nolabel="1">
                                        <list string="Cycle Data" create="false" edit="false" delete="false">
                                            <field name="cycle_number" string="Sr. No."/>
                                            <field name="timestamp"/>
                                            <field name="degree_0_planned" string="0° Plan"/>
                                            <field name="degree_0_actual" string="0° Act"/>
                                            <field name="degree_0_planned_time" string="0° Plan Time"/>
                                            <field name="degree_0_actual_time" string="0° Act Time"/>
                                            <field name="degree_45_planned" string="45° Plan"/>
                                            <field name="degree_45_actual" string="45° Act"/>
                                            <field name="degree_45_planned_time" string="45° Plan Time"/>
                                            <field name="degree_45_actual_time" string="45° Act Time"/>
                                            <field name="degree_90_planned" string="90° Plan"/>
                                            <field name="degree_90_actual" string="90° Act"/>
                                            <field name="degree_90_planned_time" string="90° Plan Time"/>
                                            <field name="degree_90_actual_time" string="90° Act Time"/>
                                            <field name="degree_135_planned" string="135° Plan"/>
                                            <field name="degree_135_actual" string="135° Act"/>
                                            <field name="degree_135_planned_time" string="135° Plan Time"/>
                                            <field name="degree_135_actual_time" string="135° Act Time"/>
                                            <field name="degree_180_planned" string="180° Plan"/>
                                            <field name="degree_180_actual" string="180° Act"/>
                                            <field name="degree_180_planned_time" string="180° Plan Time"/>
                                            <field name="degree_180_actual_time" string="180° Act Time"/>
                                            <field name="degree_225_planned" string="225° Plan"/>
                                            <field name="degree_225_actual" string="225° Act"/>
                                            <field name="degree_225_planned_time" string="225° Plan Time"/>
                                            <field name="degree_225_actual_time" string="225° Act Time"/>
                                            <field name="degree_270_planned" string="270° Plan"/>
                                            <field name="degree_270_actual" string="270° Act"/>
                                            <field name="degree_270_planned_time" string="270° Plan Time"/>
                                            <field name="degree_270_actual_time" string="270° Act Time"/>
                                            <field name="degree_315_planned" string="315° Plan"/>
                                            <field name="degree_315_actual" string="315° Act"/>
                                            <field name="degree_315_planned_time" string="315° Plan Time"/>
                                            <field name="degree_315_actual_time" string="315° Act Time"/>
                                            <field name="degree_360_planned" string="360° Plan"/>
                                            <field name="degree_360_actual" string="360° Act"/>
                                            <field name="degree_360_planned_time" string="360° Plan Time"/>
                                            <field name="degree_360_actual_time" string="360° Act Time"/>
                                        </list>
                                    </field>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Full Width Data Button (Optional - for detailed view) -->
<!--                    <div class="row mt-3" invisible="not selected_frequency">-->
<!--                        <div class="col-12">-->
<!--                            <div class="text-center">-->
<!--                                <button name="action_view_selected_logs"-->
<!--                                        string="View Full Data Logs"-->
<!--                                        type="object"-->
<!--                                        class="btn btn-primary"-->
<!--                                        icon="fa-external-link"/>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_vibration_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">vibration.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'form_view_initial_mode': 'edit'}</field>
    </record>
</odoo>