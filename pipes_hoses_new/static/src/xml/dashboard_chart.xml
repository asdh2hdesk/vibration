<!--                                <i class="fa fa-circle-o-notch fa-spin"/> Live-->
<!--                            </span>-->
<!--                            <span t-if="!state.isRunning" class="badge bg-secondary ms-2">-->
<!--                                Stopped-->
<!--                            </span>-->
<!--                        </div>-->
                        <div class="btn-group" role="group">
<!--                            <button-->
<!--                                class="btn btn-sm btn-light"-->
